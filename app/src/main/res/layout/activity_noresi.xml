<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="19dp"
        android:layout_height="25dp"
        android:src="@drawable/back_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_resi"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="NO RESI"
        android:fontFamily="@font/lato"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/back" />

    <TextView
        android:id="@+id/tulisan1"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:text="You are currently tracking"
        app:layout_constraintTop_toBottomOf="@id/no_resi"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/resi"
        android:layout_width="168dp"
        android:layout_height="38dp"
        android:layout_marginLeft="35dp"
        tools:text="1029830123"
        android:textColor="@color/blueBtik"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tulisan1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="35dp"
        android:text="Estimated dated of delivery : "
        app:layout_constraintTop_toBottomOf="@id/resi"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@id/teks1"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="35dp"
        android:textColor="#4F4F4F"
        android:text="Estimated dated of delivery : "
        app:layout_constraintTop_toBottomOf="@id/resi"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="185dp"
        tools:text="January 09, 2022"
        app:layout_constraintTop_toBottomOf="@id/resi"
        app:layout_constraintLeft_toLeftOf="@id/teks1"/>

</androidx.constraintlayout.widget.ConstraintLayout>