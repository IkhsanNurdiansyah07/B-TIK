<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"

        android:layout_marginTop="75dp"
        android:layout_width="161dp"
        android:layout_height="145dp"
        tools:src = "@drawable/foto"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="221dp"
        android:fontFamily="@font/lato"
        android:layout_height="18dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="raihan chaira" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/pen"
        app:layout_constraintLeft_toRightOf="@id/nama"
        app:layout_constraintBottom_toBottomOf="@id/nama"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="213dp"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:fontFamily="@font/lato"
        android:textSize="14dp"
        android:textColor="#D2D2D2"
        tools:text="raihanchaira21@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/nama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/cart"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/cart"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/order_text"
        android:layout_width="44dp"
        android:layout_height="17dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:text="Orders"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/cart"
        app:layout_constraintTop_toBottomOf="@id/email"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="230dp"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toRightOf="@id/order_text"
        app:layout_constraintTop_toBottomOf="@id/email"/>

    <ImageView
        android:id="@+id/delivery"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/delivery"
        app:layout_constraintTop_toBottomOf="@id/cart"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/delivery_text"
        android:layout_width="200dp"
        android:layout_height="17dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="30dp"
        android:text="Delivery Address"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/delivery"
        app:layout_constraintTop_toBottomOf="@id/order_text"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="75dp"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toRightOf="@id/delivery_text"
        app:layout_constraintTop_toBottomOf="@id/arrow"/>



</androidx.constraintlayout.widget.ConstraintLayout>