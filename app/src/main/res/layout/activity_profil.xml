<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_marginTop="75dp"
        android:layout_width="161dp"
        android:layout_height="145dp"
        tools:src = "@drawable/foto"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="19dp"
        android:layout_height="25dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="221dp"
        android:fontFamily="@font/lato"
        android:layout_height="18dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="raihan chaira" />

    <TextView
        android:id="@+id/email"
        android:layout_width="213dp"
        android:layout_height="18dp"
        android:textAlignment="center"
        android:fontFamily="@font/lato"
        android:textSize="14dp"
        android:textColor="#D2D2D2"
        tools:text="raihanchaira21@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/nama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:src="@drawable/pen"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/teks_profil"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:text="Edit Profile"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/arrow_1"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toRightOf="@id/teks_profil"
        app:layout_constraintTop_toBottomOf="@id/email"
        />

    <ImageView
        android:id="@+id/gambar2"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:src="@drawable/cart"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/gambar1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/teks_order"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:text="Order"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/teks_profil"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/arrow_2"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toRightOf="@id/teks_order"
        app:layout_constraintTop_toBottomOf="@id/arrow_1"/>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:src="@drawable/delivery"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/gambar2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/teks_delivery"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:text="Delivery Address"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/teks_order"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toRightOf="@id/teks_delivery"
        app:layout_constraintTop_toBottomOf="@id/arrow_2"
       />


</androidx.constraintlayout.widget.ConstraintLayout>